<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application Theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>


    <!-- ActionBar Style -->
    <style name="CustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/goblinGreen</item>
        <item name="android:titleTextStyle">@style/CustomActionBarTitle</item>

        <!-- Support library compatibility -->
        <item name="background">@color/goblinGreen</item>
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
    </style>

    <!-- ActionBar Title -->
    <style name="CustomActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>